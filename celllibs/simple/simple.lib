library(simple) 
{
  technology (cmos);
  revision : 1.0;
  
  time_unit : "1ps";
  capacitive_load_unit(1,ff);
  
  /* delay_model : none; */
  
  /* Inverter */
  cell (inv)
  {
    area : 1;
    pin(A)
    {
      direction : input;
    }
    pin(Y)
    {
      direction : output;
      function : "A'";
    }
  }
  
  /* tri-state inverter */
  cell (tri_inv)
  {
    area : 4;
    pin(A)
    {
      direction : input;    
    }
    pin(S)
    {
      direction : input;
    }
    pin(Z)
    {
      direction : output;
      function  : "A'";
      three_State : "S'";
    }
  }
  
  cell (buf)
  {
    area : 5;
    pin(A)
    {
      direction : input;
    }
    pin(Y)
    {
      direction : output;
      function : "A'";
      timing() {
        intrinsic_rise : 57;
        intrinsic_fall : 65;
        rise_resistance : 4.708;
        fall_resistance : 3.766;
        slope_rise : 0.0;
        slope_fall : 0.0;  
        related_pin : "A";
      }      
    }
  }  
  
  /* 2-input NAND gate */
  cell (nand2)
  {
    area : 3;
    pin(A)
    {
      direction : input;
    }
    pin(B)
    {
      direction : input;
    }
    pin(Y)
    {
      direction: output;
      function : "(A * B)'";
    }
  }
  
  /* 2-input NOR gate */
  cell (nor2)
  {
    area : 3;
    pin(A)
    {
      direction : input;
    }
    pin(B)
    {
      direction : input;
    }
    pin(Y)
    {
      direction: output;
      function : "(A + B)'";
    }
  }
  
  /* 2-input XOR */
  cell (xor2)
  {
    area : 6;
    pin(A)
    {
      direction : input;
    }
    pin(B)
    {
      direction : input;
    }
    pin(Y)
    {
      direction: output;
      function : "(A *B') + (A' * B)";
    }
  }
  
  /* 2-input inverting MUX */
  cell (imux2)
  {
    area : 5;
    pin(A)
    {
      direction : input;
    }
    pin(B)
    {
      direction : input;
    }
    pin(S)
    {
      direction : input;
    } 
    pin(Y)
    {
      direction: output;
      function : "( (A * S) + (B * S') )'";
    }
  }
  
  /* D-type flip-flop with asynchronous reset and preset */
  cell (imux2)
  {
    area : 83;
    ff("IQ", "IQN") 
    {
      next_state : "D";
      clocked_on : "CLK";
      clear      : "RESET";
      preset     : "PRESET"
      clear_preset_var1 : L;
      clear_preset_var2 : L;
    } 
    pin(CLK)
    {
      direction : input;
    }
    pin(RESET)
    {
      direction : input;
    }
    pin(PRESET)
    {
      direction : input;
    }
    pin(Q)
    {
      direction: output;
      function : "IQ";
    }
    pin(QN)
    {
      direction: output;
      function : "IQN";
    } 
  }
  
} /* end */
